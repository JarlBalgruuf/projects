extends layout
block landingHeader
block content
  div(class="container")
    p Create new message
    br
    div(class="form-group")
      form(action='/messages' method='POST')
            label Title:
            input(type="text" name="title" placeholder="" class="form-control  bg-dark" maxlength = "50" required)
            br
            label Content:
            textarea(type="text" name="content" placeholder="" class="form-control  bg-dark" maxlength = "600" required)
            br
            label Image link:
            input(type="text" name="image" placeholder="" class="form-control  bg-dark" maxlength = "200")
            br
            br
            label= "Author: " + session.username
            input(type="hidden" name="author" placeholder="" value=session.username class="form-control  bg-dark")
            br
            br
            button(type="submit" class="btn btn-outline-success") Post